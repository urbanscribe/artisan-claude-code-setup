{
  "permissions": {
    "Read": "allow",
    "Grep": "allow",
    "Glob": "allow",
    "Edit": "prompt",
    "Bash": {
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "git show": "allow",
      "npm test": "prompt",
      "python -m pytest": "prompt",
      "docker compose ps": "allow",
      "docker compose logs": "allow"
    }
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$CC_DESTINATION/.claude/hooks/safety_pre_tool_wrapper.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "$CC_DESTINATION/.claude/hooks/validation_post_tool_wrapper.sh"
          }
        ]
      }
    ]
  }
}
